<h1 class="text-2xl font-bold mb-6 text-blue-900">All Bookings</h1>
<div class="overflow-x-auto rounded-lg shadow-lg">
  <table class="min-w-full bg-white border border-gray-200">
    <thead class="bg-blue-100">
      <tr>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600">Name</th>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600">Event</th>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600">Status</th>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600">Actions</th>
      </tr>
    </thead>
    <%= form_with url: request.path, method: :get, local: true, class: "mb-4" do %>
        <div class="flex">
            <%= text_field_tag :q, params[:q], placeholder: "Search by ID or Name...", class: "border rounded-l px-4 py-2 w-full" %>
            <%= submit_tag "Search", class: "bg-blue-600 text-white px-4 py-2 rounded-r" %>
        </div>
    <% end %>
    <tbody>
      <% @bookings.each do |booking| %>
        <tr>
          <td class="py-3 px-4 border-b text-sm"><%= booking.name %></td>
          <td class="py-3 px-4 border-b text-sm"><%= booking.event&.title || "N/A" %></td>
          <td class="py-3 px-4 border-b text-sm capitalize"><%= booking.status %></td>
          <td class="py-3 px-4 border-b text-sm">
            <%= link_to 'Show', booking_path(booking), class: "text-blue-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>