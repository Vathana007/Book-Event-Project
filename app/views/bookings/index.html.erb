<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2 align-items-center">
      <div class="col-sm-6 d-flex align-items-center">
        <i class="fas fa-ticket-alt fa-lg text-primary mr-2"></i>
        <h1 class="m-0 text-dark">All Bookings</h1>
      </div>
      <div class="col-sm-6 text-right">
        <%= link_to "Export CSV", export_bookings_path(format: :csv), class: "btn btn-success mr-2" %>
        <%= link_to "Export PDF", export_bookings_path(format: :pdf), class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>

<%= turbo_stream_from "bookings" %>

<div class="container-fluid" data-controller="bookings-channel" data-bookings-channel-is-admin-value="<%= Current.user&.role == 'admin' %>">
  <div class="card card-primary card-outline">
    <div class="card-header">
      <%= form_with url: request.path, method: :get, local: true, class: "form-inline" do %>
        <div class="input-group input-group-sm" style="width: 300px;">
          <%= text_field_tag :q, params[:q], placeholder: "Search by ID or Name...", class: "form-control" %>
          <div class="input-group-append">
            <%= submit_tag "Search", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-body p-0">
      <div style="max-height: 500px; overflow-y: auto;">
        <table class="table table-hover table-bordered mb-0 align-middle">
          <thead class="thead-light">
            <tr>
              <th>Name</th>
              <th>Event</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody  id ="bookings_table">
            <% @bookings.each do |booking| %>
              <%= render "booking_row", booking: booking %>
            <% end %>
          </tbody>
        </table>
      </div>
      <% if @bookings.empty? %>
        <div class="p-4 text-center text-muted">
          No bookings found.
        </div>
      <% end %>
    </div>
  </div>
</div>