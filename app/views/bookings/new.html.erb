<div class="container mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Create Booking for <%= @event.title %></h1>
    <p class="text-gray-600 mt-2">
      Event Date: <%= @event.start_time.strftime("%B %d, %Y at %I:%M %p") %>
    </p>
    <p class="text-gray-600">Location: <%= @event.location %></p>
  </div>

  <%= render 'form', back_path: (Current.user&.role == 'customer' ? customer_event_path(@event) : event_path(@event)) %>
</div>