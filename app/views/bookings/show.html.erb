<h1 class="text-2xl font-bold mb-6 text-blue-900">Booking Details</h1>
<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
  <p class="mb-2"><strong>Name:</strong> <%= @booking.name %></p>
  <p class="mb-2"><strong>Email:</strong> <%= @booking.email %></p>
  <p class="mb-2"><strong>Phone:</strong> <%= @booking.phone_number %></p>
  <p class="mb-2"><strong>Status:</strong> <span class="capitalize"><%= @booking.status %></span></p>
  <hr class="my-4">
  <h2 class="text-xl font-semibold mb-2 text-blue-800">Event Information</h2>
  <% if @booking.event %>
    <p class="mb-2"><strong>Title:</strong> <%= @booking.event.title %></p>
    <p class="mb-2"><strong>Location:</strong> <%= @booking.event.location %></p>
    <p class="mb-2"><strong>Date:</strong> <%= @booking.event.start_time.strftime("%Y-%m-%d %H:%M") if @booking.event.start_time %></p>
    <p class="mb-2"><strong>Price:</strong> <%= number_to_currency(@booking.event.price) %></p>
    <p class="mb-2"><strong>Tickets Booked:</strong> <%= @booking.tickets %></p>
    <p class="mb-2"><strong>Total Price:</strong> <%= number_to_currency(@booking.total_price) %></p>
    <%= link_to 'Back', bookings_path, class: "text-blue-600 hover:underline" %>
  <% else %>
    <p>No event information available.</p>
  <% end %>
</div>