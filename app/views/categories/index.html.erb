<h1 class="text-3xl font-bold mb-6 text-blue-900">Categories</h1>

<div class="overflow-x-auto rounded-lg shadow-lg">
  <table class="min-w-full bg-white border border-gray-200">
    <thead class="bg-blue-100">
      <tr>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600">Name</th>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600">Description</th>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600"></th>
      </tr>
    </thead>
    <%= form_with url: request.path, method: :get, local: true, class: "mb-4" do %>
      <div class="flex">
        <%= text_field_tag :q, params[:q], placeholder: "Search by ID or Name...", class: "border rounded-l px-4 py-2 w-full" %>
        <%= submit_tag "Search", class: "bg-blue-600 text-white px-4 py-2 rounded-r" %>
      </div>
    <% end %>
    <tbody id="categories">
        <% @categories.each do |category| %>
            <%= render partial: "category", locals: { category: category } %>
        <% end %>
    </tbody>
  </table>
</div>

<div class="mt-6">
  <%= link_to 'Create Category', new_category_path, class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-lg transition duration-200 hover:bg-blue-700 shadow" %>
</div>