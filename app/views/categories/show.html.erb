<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">
          <i class="fas fa-list-alt mr-2 text-primary"></i>
          Category Details
        </h1>
      </div>
      <div class="col-sm-6 text-right">
        <%= link_to edit_category_path(@category), class: "btn btn-warning mr-2" do %>
          <i class="fas fa-edit"></i> Edit
        <% end %>
        <%= link_to categories_path, class: "btn btn-secondary" do %>
          <i class="fas fa-arrow-left"></i> Back
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card card-primary card-outline shadow-sm">
        <div class="card-body">
          <table class="table table-bordered mb-0">
            <tbody>
              <tr>
                <th style="width: 200px;" class="bg-light"><i class="fas fa-tag mr-1 text-info"></i> Name</th>
                <td><%= @category.name %></td>
              </tr>
              <tr>
                <th class="bg-light"><i class="fas fa-align-left mr-1 text-info"></i> Description</th>
                <td><%= @category.description %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>