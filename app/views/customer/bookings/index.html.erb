<div class="container-fluid py-4">
  <h1 class="h3 font-weight-bold text-dark mb-4">My Bookings</h1>

  <% if @bookings.any? %>
    <div class="row">
      <% @bookings.each do |booking| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card card-primary card-outline shadow h-100 d-flex flex-column">
            <div class="card-body d-flex flex-column justify-content-between">
              <div>
                <h5 class="card-title font-weight-bold text-dark mb-2"><%= booking.event.title %></h5>
                <p class="mb-1 text-secondary"><i class="fas fa-calendar-alt mr-1"></i> <%= booking.event.start_time.strftime("%B %d, %Y at %I:%M %p") %></p>
                <p class="mb-1 text-secondary"><i class="fas fa-map-marker-alt mr-1"></i> <%= booking.event.location %></p>
                <p class="mb-1 text-secondary"><i class="fas fa-ticket-alt mr-1"></i> <%= booking.tickets %> ticket(s)</p>
                <p class="text-success font-weight-bold mb-2">Total: <%= number_to_currency(booking.total_price || 0) %></p>
                <p class="text-muted text-sm mb-2">Status: <span class="badge <%= booking.status == "confirmed" ? "badge-success" : booking.status == "pending" ? "badge-warning" : "badge-danger" %>"><%= booking.status.titleize %></span></p>
              </div>
              <div class="mt-auto d-flex">
                <%= link_to "View Details", customer_booking_path(booking), class: "btn btn-outline-primary btn-sm mr-2 flex-fill" %>
                <% if booking.status == "pending" && !booking.payment %>
                  <%= link_to "Complete Payment", new_booking_payment_path(booking), class: "btn btn-primary btn-sm flex-fill" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center mt-5">
      <i class="fas fa-info-circle mr-2"></i>
      You haven't made any bookings yet.
      <div class="mt-3">
        <%= link_to "Browse Events", customer_events_path, class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  <% end %>
</div>