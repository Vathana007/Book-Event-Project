<div class="container-fluid py-4">
  <div class="row mb-4">
    <div class="col">
      <h1 class="h3 font-weight-bold text-dark">Browse Events</h1>
    </div>
  </div>

  <% if @events.any? %>
    <div class="row">
      <% @events.each do |event| %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card card-primary card-outline shadow h-100">
            <% if event.image.attached? %>
              <%= image_tag event.image, class: "card-img-top rounded-top", style: "height: 180px; object-fit: cover;" %>
            <% else %>
              <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                <span class="text-muted">No Image</span>
              </div>
            <% end %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title font-weight-bold text-dark mb-2"><%= event.title %></h5>
              <p class="mb-1 text-secondary"><i class="fas fa-calendar-alt mr-1"></i> <%= event.start_time.strftime("%B %d, %Y %I:%M %p") %></p>
              <p class="mb-1 text-secondary"><i class="fas fa-map-marker-alt mr-1"></i> <%= event.location %></p>
              <p class="text-muted mb-2"><%= truncate(event.description, length: 80) %></p>
              <% if event.ticket_types.any? %>
                <div class="mb-2">
                  <strong>Ticket Types:</strong>
                  <ul class="pl-3 mb-0">
                    <% event.ticket_types.each do |tt| %>
                      <li>
                        <span class="badge badge-primary"><%= tt.name %></span>
                        <span class="badge badge-info"><%= number_to_currency(tt.price) %></span>
                        <span class="badge badge-success">Available: <%= tt.available_tickets %></span>
                      </li>
                    <% end %>
                  </ul>
                </div>
              <% else %>
                <span class="badge badge-warning">No ticket types</span>
              <% end %>
              <div class="mt-auto d-flex">
                <%= link_to "View Details", customer_event_path(event), class: "btn btn-outline-primary btn-sm mr-2 flex-fill" %>
                <%= link_to "Book Now", new_event_booking_path(event), class: "btn btn-primary btn-sm flex-fill" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center mt-5">
      <i class="fas fa-info-circle mr-2"></i>
      No events available at the moment.
    </div>
  <% end %>
</div>