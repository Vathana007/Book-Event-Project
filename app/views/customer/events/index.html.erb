<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Browse Events</h1>

  <% if @events.any? %>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @events.each do |event| %>
        <div class="bg-white shadow-lg rounded-lg overflow-hidden flex flex-col">
          <% if event.image.attached? %>
            <%= image_tag event.image, class: "w-full h-48 object-cover" %>
          <% else %>
            <div class="w-full h-48 bg-gray-200 flex items-center justify-center">
              <span class="text-gray-400">No Image</span>
            </div>
          <% end %>
          <div class="p-6 flex-1 flex flex-col justify-between">
            <div>
              <h2 class="text-xl font-bold text-gray-800 mb-2"><%= event.title %></h2>
              <p class="text-gray-600 mb-1"><i class="fas fa-calendar-alt mr-1"></i> <%= event.start_time.strftime("%B %d, %Y at %I:%M %p") %></p>
              <p class="text-gray-600 mb-1"><i class="fas fa-map-marker-alt mr-1"></i> <%= event.location %></p>
              <p class="text-gray-700 text-sm mb-2"><%= truncate(event.description, length: 80) %></p>
            </div>
            <div class="mt-4 flex gap-2">
              <%= link_to "View Details", customer_event_path(event), class: "btn btn-outline-primary" %>
              <% if event.available_tickets > 0 %>
                <%= link_to "Book Now", new_event_booking_path(event), class: "btn btn-primary" %>
              <% else %>
                <span class="inline-block px-4 py-2 bg-gray-300 text-gray-600 rounded font-semibold cursor-not-allowed">Sold Out</span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg p-12 text-center">
      <p class="text-gray-600 text-lg mb-4">No events available at the moment.</p>
    </div>
  <% end %>
</div>