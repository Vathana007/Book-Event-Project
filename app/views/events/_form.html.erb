<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">
          <i class="fas fa-calendar-alt mr-2 <%= @event.persisted? ? 'text-warning' : 'text-primary' %>"></i>
          <%= @event.persisted? ? "Edit Event" : "New Event" %>
        </h1>
      </div>
      <div class="col-sm-6 text-right">
        <%= link_to "Back", events_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card <%= @event.persisted? ? 'card-warning' : 'card-primary' %> card-outline shadow-sm">
        <div class="card-body">
          <%= form_with(model: @event, local: true, multipart: true, class: "form-horizontal") do |form| %>
            <% if @event.errors.any? %>
              <div class="alert alert-danger">
                <h4><i class="icon fas fa-exclamation-triangle"></i>
                  <%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:
                </h4>
                <ul>
                  <% @event.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group row">
              <%= form.label :title, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.text_field :title, class: "form-control", placeholder: "Enter event title" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :description, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.text_area :description, class: "form-control", placeholder: "Enter description" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :location, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.text_field :location, class: "form-control", placeholder: "Enter location" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :start_time, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.datetime_select :start_time, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :end_time, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.datetime_select :end_time, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :category_id, "Category", class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: "Select Category" }, class: "form-control" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :image, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.file_field :image, class: "form-control" %>
                <% if @event.image.attached? %>
                  <div class="mt-2">
                    <%= image_tag @event.image.variant(resize_to_limit: [200, 200]), class: "rounded" %>
                  </div>
                <% end %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-sm-9 offset-sm-3">
                <% if @event.persisted? %>
                  <div class="alert alert-info">
                    <strong>Note:</strong> Pricing and ticket availability are managed through <strong>Ticket Types</strong>.
                    <%= link_to "Manage Ticket Types", event_ticket_types_path(@event), class: "font-weight-bold" %>
                  </div>
                <% else %>
                  <div class="alert alert-info">
                    <strong>Note:</strong> After creating the event, you can add ticket types with pricing and availability.
                  </div>
                <% end %>
              </div>
            </div>

            <div class="form-group row mt-4">
              <div class="col-sm-9 offset-sm-3">
                <%= form.submit @event.persisted? ? "Update Event" : "Create Event", class: @event.persisted? ? "btn btn-warning" : "btn btn-primary" %>
                <%= link_to "Cancel", events_path, class: "btn btn-outline-secondary ml-2" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>