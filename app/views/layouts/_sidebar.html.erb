<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <%= link_to root_path, class: "brand-link" do %>
    <span class="brand-text font-weight-light">Event Booking</span>
  <% end %>

  <div class="sidebar">
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <% if Current.user&.role == "admin" %>
          <li class="nav-item">
            <%= link_to root_path, class: "nav-link #{controller_name == 'dashboards' ? 'active' : ''}" do %>
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>Dashboard</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to users_path, class: "nav-link #{controller_name == 'users' ? 'active' : ''}" do %>
              <i class="nav-icon fas fa-users"></i>
              <p>Users</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to categories_path, class: "nav-link #{controller_name == 'categories' ? 'active' : ''}" do %>
              <i class="nav-icon fas fa-tags"></i>
              <p>Categories</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to events_path, class: "nav-link #{controller_name == 'events' ? 'active' : ''}" do %>
              <i class="nav-icon fas fa-calendar"></i>
              <p>Events</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to bookings_path, class: "nav-link #{controller_name == 'bookings' ? 'active' : ''}" do %>
              <i class="nav-icon fas fa-ticket-alt"></i>
              <p>Bookings</p>
            <% end %>
          </li>
        <% elsif Current.user&.role == "customer" %>
          <li class="nav-item">
            <%= link_to customer_bookings_path, class: "nav-link #{controller_name == 'bookings' ? 'active' : ''}" do %>
              <i class="nav-icon fas fa-ticket-alt"></i>
              <p>My Bookings</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to customer_events_path, class: "nav-link #{controller_name == 'events' ? 'active' : ''}" do %>
              <i class="nav-icon fas fa-calendar"></i>
              <p>Events</p>
            <% end %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</aside>