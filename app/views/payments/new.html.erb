<h1>Payment for Booking #<%= @booking.id %></h1>
<p>Amount: <%= number_to_currency(@booking.event.price) %></p>
<%= form_with model: [@booking, @payment] do |form| %>
  <div class="mb-4">
    <%= form.label :payment_method, class: "block text-gray-700 font-bold mb-2" %>
    <%= form.select :payment_method, Payment::PAYMENT_METHODS.map { |m| [m.titleize, m] }, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700" %>
  </div>
  <%= form.submit "Pay", class: "bg-blue-600 text-white font-bold py-2 px-4 rounded hover:bg-blue-700" %>
<% end %>