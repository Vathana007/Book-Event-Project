<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2 align-items-center">
      <div class="col-sm-6 d-flex align-items-center">
        <i class="fas fa-ticket-alt fa-lg text-primary mr-2"></i>
        <h1 class="m-0">Ticket Types for <%= @event.title %></h1>
      </div>
      <div class="col-sm-6 text-right">
        <%= link_to events_path, class: "btn btn-secondary mr-2" do %>
          <i class="fas fa-arrow-left mr-1"></i> Back to Events
        <% end %>
        <%= link_to new_event_ticket_type_path(@event), class: "btn btn-success" do %>
          <i class="fas fa-plus mr-1"></i> New Ticket Type
        <% end %>
      </div>
    </div>
  </div>
</div>

<section class="content">
  <div class="container-fluid">
    <div class="card card-primary card-outline">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="card-title mb-0">
          <i class="fas fa-list-ul mr-2 text-primary"></i>
          List of Ticket Types
        </h3>
        <div class="card-tools">
          <%= form_with url: event_ticket_types_path(@event), method: :get, local: true, class: "input-group input-group-sm" do %>
            <%= text_field_tag :q, params[:q], placeholder: "Search by name...", class: "form-control", style: "width: 180px;" %>
            <div class="input-group-append">
              <%= submit_tag "Search", class: "btn btn-default" %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0 align-middle">
          <thead class="thead-light">
            <tr>
              <th><i class="fas fa-tag mr-1 text-secondary"></i> Name</th>
              <th><i class="fas fa-dollar-sign mr-1 text-success"></i> Price</th>
              <th><i class="fas fa-ticket-alt mr-1 text-info"></i> Available</th>
              <th class="text-center" style="width: 220px;"><i class="fas fa-cogs mr-1 text-warning"></i> Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @ticket_types.each do |ticket_type| %>
              <tr>
                <td><%= ticket_type.name %></td>
                <td>
                  <span class="badge badge-success">
                    <i class="fas fa-dollar-sign"></i>
                    <%= number_with_precision(ticket_type.price, precision: 2) %>
                  </span>
                </td>
                <td>
                  <span class="badge badge-info">
                    <i class="fas fa-ticket-alt"></i>
                    <%= ticket_type.available_tickets %>
                  </span>
                </td>
                <td class="text-center">
                  <%= link_to [@event, ticket_type], class: "btn btn-primary btn-sm mr-1", title: "Show" do %>
                    <i class="fas fa-eye"></i>
                  <% end %>
                  <%= link_to edit_event_ticket_type_path(@event, ticket_type), class: "btn btn-warning btn-sm mr-1", title: "Edit" do %>
                    <i class="fas fa-edit"></i>
                  <% end %>
                  <%= link_to [@event, ticket_type], method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger btn-sm", title: "Delete" do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
            <% if @ticket_types.empty? %>
              <tr>
                <td colspan="4" class="text-center text-muted py-4">
                  <i class="fas fa-info-circle mr-2"></i>No ticket types found.
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</section>  