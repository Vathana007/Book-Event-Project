<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1 class="m-0 text-dark">
          <i class="fas fa-user-edit mr-2 <%= user.persisted? ? 'text-warning' : 'text-primary' %>"></i>
          <%= user.persisted? ? "Edit User" : "New User" %>
        </h1>
      </div>
      <div class="col-sm-6 text-right">
        <%= link_to "Back", users_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card <%= user.persisted? ? 'card-warning' : 'card-primary' %> card-outline shadow-sm">        <div class="card-body">
          <%= form_with(model: user, class: "form-horizontal") do |form| %>
            <% if user.errors.any? %>
              <div class="alert alert-danger">
                <h4><i class="icon fas fa-exclamation-triangle"></i>
                  <%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:
                </h4>
                <ul>
                  <% user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group row">
              <%= form.label :name, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.text_field :name, class: "form-control", placeholder: "Enter full name" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :email_address, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.email_field :email_address, class: "form-control", placeholder: "Enter email address" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :password, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Enter password" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :password_confirmation, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", placeholder: "Confirm password" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :credit, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.number_field :credit, step: 0.01, min: 0, class: "form-control", placeholder: "Enter credit amount" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :role, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.text_field :role, class: "form-control", placeholder: "Enter role" %>
              </div>
            </div>

            <div class="form-group row">
              <%= form.label :phone_number, class: "col-sm-3 col-form-label font-weight-bold" %>
              <div class="col-sm-9">
                <%= form.telephone_field :phone_number, class: "form-control", placeholder: "Enter phone number" %>
              </div>
            </div>

            <div class="form-group row mt-4">
              <div class="col-sm-9 offset-sm-3">
                <% if user.persisted? %>
                  <%= form.submit "Update User", class: "btn btn-warning" %>
                <% else %>
                  <%= form.submit "Create User", class: "btn btn-primary" %>
                <% end %>
                <%= link_to "Cancel", users_path, class: "btn btn-outline-secondary ml-2" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>