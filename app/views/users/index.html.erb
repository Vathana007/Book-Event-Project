<h1 class="text-3xl font-bold mb-6 text-blue-900">Users</h1>

<div class="overflow-x-auto rounded-lg shadow-lg">
  <table class="min-w-full bg-white border border-gray-200">
    <thead class="bg-blue-100">
      <tr>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600">Name</th>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600">Email</th>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600">Role</th>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600">Phone Number</th>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600"></th>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600"></th>
        <th class="py-3 px-4 border-b text-left text-sm text-gray-600"></th>
      </tr>
    </thead>
    <%= form_with url: users_path, method: :get, local: true, class: "mb-4" do %>
      <div class="flex">
        <%= text_field_tag :q, params[:q], placeholder: "Search by ID or Name...", class: "border rounded-l px-4 py-2 w-full" %>
        <%= submit_tag "Search", class: "bg-blue-600 text-white px-4 py-2 rounded-r" %>
      </div>
    <% end %>
    <tbody>
      <% @users.each do |user| %>
        <tr class="hover:bg-gray-50 transition duration-200">
          <td class="py-3 px-4 border-b text-sm"><%= user.name %></td>
          <td class="py-3 px-4 border-b text-sm"><%= user.email %></td>
          <td class="py-3 px-4 border-b text-sm"><%= user.role %></td>
          <td class="py-3 px-4 border-b text-sm"><%= user.phone_number %></td>
          <td class="py-3 px-4 border-b text-sm">
            <%= link_to 'Show', user_path(user), class: "text-blue-600 hover:underline" %>
          </td>
          <td class="py-3 px-4 border-b text-sm">
            <%= link_to 'Edit', edit_user_path(user), class: "text-yellow-600 hover:underline" %>
          </td>
          <td class="py-3 px-4 border-b text-sm">
            <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: "text-red-600 hover:underline" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="mt-6">
  <%= link_to 'New User', new_user_path, class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-lg transition duration-200 hover:bg-blue-700 shadow" %>
</div>