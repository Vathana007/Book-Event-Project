<div class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6 d-flex align-items-center">
        <i class="fas fa-user mr-2 text-primary"></i>
        <h1 class="m-0 text-dark">Users Management</h1>
      </div>
      <div class="col-sm-6 text-right">
        <%= link_to new_user_path, class: "btn btn-primary" do %>
          <i class="fas fa-plus mr-1"></i>
          New User
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="card card-primary card-outline">
    <div class="card-header">
      <%= form_with url: users_path, method: :get, local: true, class: "form-inline" do %>
        <div class="input-group input-group-sm" style="width: 300px;">
          <%= text_field_tag :q, params[:q], placeholder: "Search by ID or Name...", class: "form-control" %>
          <div class="input-group-append">
            <%= submit_tag "Search", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="card-body p-0">
      <div style="max-height: 500px; overflow-y: auto;">
        <table class="table table-hover table-bordered mb-0">
          <thead class="thead-light">
            <tr>
              <th>Name</th>
              <th>Email Address</th>
              <th>Role</th>
              <th>Phone Number</th>
              <th class="text-center" colspan="3">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%= user.email_address %></td>
                <td>
                  <span class="badge <%= user.role == 'admin' ? 'badge-danger' : 'badge-primary' %>">
                    <%= user.role.capitalize %>
                  </span>
                </td>
                <td><%= user.phone_number %></td>
                <td class="text-center">
                  <%= link_to user_path(user), class: "btn btn-info btn-sm", title: "Show" do %>
                    <i class="fas fa-eye"></i>
                    <span class="ml-1 d-none d-md-inline">Show</span>
                  <% end %>
                </td>
                <td class="text-center">
                  <%= link_to edit_user_path(user), class: "btn btn-warning btn-sm", title: "Edit" do %>
                    <i class="fas fa-edit"></i>
                    <span class="ml-1 d-none d-md-inline">Edit</span>
                  <% end %>
                </td>
                <td class="text-center">
                  <%= link_to user_path(user), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm", title: "Delete" do %>
                    <i class="fas fa-trash"></i>
                    <span class="ml-1 d-none d-md-inline">Delete</span>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>